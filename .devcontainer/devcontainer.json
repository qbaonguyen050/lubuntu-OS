{
  "name": "Lubuntu Desktop",
  "build": {
    "dockerfile": "Dockerfile"
  },
  "forwardPorts": [6080],
  "portsAttributes": {
    "6080": {
      "label": "Lubuntu Desktop",
      "onAutoForward": "openPreview"
    }
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-vscode-remote.remote-containers"
      ]
    }
  },
  "postCreateCommand": "git config --global --add safe.directory /workspaces/lubuntu-OS && /bin/bash /.devcontainer/start-desktop.sh"
}